<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>PSPhlebotomist</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <ProjectGuid>BADB100D-2321-4D45-4F57-4D5ABADB100D</ProjectGuid>
    <LangVersion>latest</LangVersion>
    <VersionFile>$(MSBuildProjectDirectory)\VERSION</VersionFile>
    <AssemblyVersion>$([System.IO.File]::ReadAllText('$(VersionFile)').Trim())</AssemblyVersion>
    <Version>$(AssemblyVersion)</Version>
    <InformationalVersion>$(AssemblyVersion)</InformationalVersion>
    <ProductVersion>$(AssemblyVersion)</ProductVersion>
    <FileVersion>$(AssemblyVersion)</FileVersion>
    <Nullable>enable</Nullable>
    <Authors>Christopher Conley</Authors>
    <Description>It's just a little prick</Description>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <ApplicationIcon>Properties\res\PSPhlebotomist_256x256.ico</ApplicationIcon>
    <PackageIcon>PSPhlebotomist_85x85.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/christopher-conley/PSPhlebotomist</PackageProjectUrl>
    <RepositoryUrl>https://github.com/christopher-conley/PSPhlebotomist</RepositoryUrl>
    <Copyright>Copyright (c) 2025 Christopher Conley</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>injection;dll-injection;injector;dll-injector;mod;ue4ss;reshade;security</PackageTags>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include=".\.editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <None Include="bin\Release\netstandard2.0\publish\**">
      <Pack>True</Pack>
      <PackagePath>\lib</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="PSPhlebotomist.psd1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="PolySharp" Version="1.15.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <EditorConfigFiles Remove=".\.editorconfig" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Properties\res\PSPhlebotomist_256x256.ico" />
    <Content Include="Properties\res\PSPhlebotomist_256x256.png" />
    <Content Include="Properties\res\PSPhlebotomist_85x85.png" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Config\Logging\Runtime\serilog-config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Properties\res\PSPhlebotomist_256x256.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Properties\res\PSPhlebotomist_85x85.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="docs\" />
  </ItemGroup>
  <Import Project="..\.paket\Paket.Restore.targets" />

  <Target Name="UpdatePsd1Version" AfterTargets="AfterBuild;AfterPublish">
    <Message Text="Updating PSPhlebotomist.psd1 version to $(AssemblyVersion)" Importance="high" />
    <Exec Command="pwsh -NoProfile -ExecutionPolicy Bypass -Command &quot;if (Test-Path '$(OutDir)PSPhlebotomist.psd1') { (Get-Content '$(OutDir)PSPhlebotomist.psd1').Replace('REPLACEMEVERSIONSTRING', '$(AssemblyVersion)') | Set-Content '$(OutDir)PSPhlebotomist.psd1' -Encoding utf8; Write-Host 'Updated version in PSPhlebotomist.psd1 to $(AssemblyVersion)' } else { Write-Warning 'PSPhlebotomist.psd1 not found' }&quot;"
          IgnoreExitCode="false"
          ContinueOnError="false" />
  </Target>

  <Target Name="GenerateHelp" AfterTargets="AfterBuild;AfterPublish" DependsOnTargets="UpdatePsd1Version" Condition="Exists('$(ProjectDir)docs\New-Injection.md')" >
    <MakeDir Directories="$(OutDir)en-US" />
    <Message Text="Generating PlatyPS help documentation" Importance="high" />
    <Exec Command="pwsh -NoProfile -ExecutionPolicy Bypass -Command &quot;Import-Module PlatyPS -ErrorAction SilentlyContinue; if ($?) { Import-Module '$(TargetPath)' -Force -ErrorAction Stop; Update-MarkdownHelp -Path '$(ProjectDir)docs' -ErrorAction SilentlyContinue; New-ExternalHelp -Path '$(ProjectDir)docs' -OutputPath '$(OutDir)en-US' -Force -ErrorAction Stop; Write-Host 'Generated help files in $(OutDir)en-US' } else { Write-Warning 'PlatyPS module not found, skipping help generation' }&quot;"
          IgnoreExitCode="true"
          ContinueOnError="true" />
  </Target>
</Project>
