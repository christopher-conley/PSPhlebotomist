<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>PSPhlebotomist</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <ProjectGuid>BADB100D-2321-4D45-4F57-4D5ABADB100D</ProjectGuid>
    <LangVersion>latest</LangVersion>
    <VersionFile>$(MSBuildProjectDirectory)\VERSION</VersionFile>
    <AssemblyVersion>$([System.IO.File]::ReadAllText('$(VersionFile)').Trim())</AssemblyVersion>
    <Version>$(AssemblyVersion)</Version>
    <InformationalVersion>$(AssemblyVersion)</InformationalVersion>
    <ProductVersion>$(AssemblyVersion)</ProductVersion>
    <FileVersion>$(AssemblyVersion)</FileVersion>
    <Nullable>enable</Nullable>
    <Authors>Christopher Conley</Authors>
    <Description>It's just a little prick</Description>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <ApplicationIcon>Properties\res\PSPhlebotomist_256x256.ico</ApplicationIcon>
    <PackageIcon>PSPhlebotomist_85x85.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/christopher-conley/PSPhlebotomist</PackageProjectUrl>
    <RepositoryUrl>https://github.com/christopher-conley/PSPhlebotomist</RepositoryUrl>
    <Copyright>Copyright (c) 2025 Christopher Conley</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>injection;dll-injection;injector;dll-injector;mod;ue4ss;reshade;security</PackageTags>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include=".\.editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <None Include="bin\Release\netstandard2.0\publish\**">
      <Pack>True</Pack>
      <PackagePath>\lib</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="PSPhlebotomist.psd1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="PolySharp" Version="1.15.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <EditorConfigFiles Remove=".\.editorconfig" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Properties\res\PSPhlebotomist_256x256.ico" />
    <Content Include="Properties\res\PSPhlebotomist_256x256.png" />
    <Content Include="Properties\res\PSPhlebotomist_85x85.png" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Config\Logging\Runtime\serilog-config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Properties\res\PSPhlebotomist_256x256.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Properties\res\PSPhlebotomist_85x85.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="docs\" />
  </ItemGroup>
  <Import Project="..\.paket\Paket.Restore.targets" />

  <!-- Update PSD1 version after build/publish -->
  <Target Name="UpdatePsd1Version" AfterTargets="Build;Publish">
    <Message Text="[UpdatePsd1Version] OutDir: $(OutDir), PublishDir: $(PublishDir), Version: $(AssemblyVersion)" Importance="high" />

    <!-- Determine the correct output directory -->
    <PropertyGroup>
      <Psd1OutputDir Condition="'$(PublishDir)' != ''">$(PublishDir)</Psd1OutputDir>
      <Psd1OutputDir Condition="'$(PublishDir)' == ''">$(OutDir)</Psd1OutputDir>
    </PropertyGroup>

    <Message Text="[UpdatePsd1Version] Using directory: $(Psd1OutputDir)" Importance="high" />

    <Exec Command="pwsh -NoProfile -ExecutionPolicy Bypass -Command &quot;Write-Host '[UpdatePsd1Version] Checking PSD1...'; $psd1Path = Join-Path '$(Psd1OutputDir)' 'PSPhlebotomist.psd1'; Write-Host '[UpdatePsd1Version] Looking for:' $psd1Path; if (Test-Path $psd1Path) { Write-Host '[UpdatePsd1Version] Found PSD1'; $content = Get-Content $psd1Path -Raw; if ($content -match 'REPLACEMEVERSIONSTRING') { Write-Host '[UpdatePsd1Version] Replacing placeholder...'; $updated = $content.Replace('REPLACEMEVERSIONSTRING', '$(AssemblyVersion)'); Set-Content $psd1Path -Value $updated -Encoding utf8 -NoNewline; Write-Host '[UpdatePsd1Version] ✓ Updated to $(AssemblyVersion)' } else { Write-Host '[UpdatePsd1Version] Already updated or no placeholder found' } } else { Write-Warning '[UpdatePsd1Version] ✗ PSD1 not found at:' $psd1Path; Write-Host 'Directory contents:'; Get-ChildItem '$(Psd1OutputDir)' | Format-Table Name }&quot;"
          IgnoreExitCode="true"
          ContinueOnError="true" />
  </Target>

  <!-- Generate help documentation -->
  <Target Name="GenerateHelp" AfterTargets="UpdatePsd1Version" Condition="Exists('$(ProjectDir)docs\New-Injection.md')">
    <Message Text="[GenerateHelp] Starting..." Importance="high" />

    <!-- Determine the correct output directory -->
    <PropertyGroup>
      <HelpOutputDir Condition="'$(PublishDir)' != ''">$(PublishDir)</HelpOutputDir>
      <HelpOutputDir Condition="'$(PublishDir)' == ''">$(OutDir)</HelpOutputDir>
    </PropertyGroup>

    <MakeDir Directories="$(HelpOutputDir)en-US" />

    <!-- Use -Scope CurrentUser to ensure the module is found -->
    <Exec Command="pwsh -NoProfile -ExecutionPolicy Bypass -Command &quot;Write-Host '[GenerateHelp] Module path:' $env:PSModulePath; Write-Host '[GenerateHelp] Checking for PlatyPS...'; if (-not (Get-Module -ListAvailable -Name PlatyPS)) { Write-Host '[GenerateHelp] Installing PlatyPS to CurrentUser scope...'; Install-Module -Name PlatyPS -Scope CurrentUser -Force -SkipPublisherCheck }; Import-Module PlatyPS -ErrorAction Stop; Write-Host '[GenerateHelp] ✓ PlatyPS loaded'; Write-Host '[GenerateHelp] Importing module from: $(TargetPath)'; Import-Module '$(TargetPath)' -Force -ErrorAction Stop; Write-Host '[GenerateHelp] ✓ Module loaded'; Write-Host '[GenerateHelp] Updating Markdown...'; Update-MarkdownHelp -Path '$(ProjectDir)docs' -ErrorAction SilentlyContinue; Write-Host '[GenerateHelp] Generating MAML...'; New-ExternalHelp -Path '$(ProjectDir)docs' -OutputPath '$(HelpOutputDir)en-US' -Force -ErrorAction Stop; Write-Host '[GenerateHelp] ✓ Help generated in $(HelpOutputDir)en-US'&quot;"
          IgnoreExitCode="true"
          ContinueOnError="true" />
  </Target>
</Project>
